@import url(http://fonts.googleapis.com/css?family=Open\+Sans);
@import url(http://fonts.googleapis.com/css?family=Lato);

blanco = #FFFFFF
gris = #808080
titulos = #27ae60
verde = #008000

*
	border 0
	margin 0
	padding 0

body 
	font-family 'Open Sans', sans-serif
	font-size 16px
	font-style normal
	font-weight 100
	
footer
	background #217c48
	height auto
	padding .5em 0 .5em 0
	width 100%
	a
		color blanco
		text-decoration none
	a:hover
		text-decoration underline
	p
		color blanco
		font-size .8em
		text-align center
	
nav
	background rgb(33, 124, 72)
	height auto
	width 100%
	ul
		padding .5em 0 .5em 1em
		li
			display inline-block
			list-style none
			padding 0 3em 0 0
			vertical-align top
			a
				color blanco
				font-size .9em
				text-decoration none
				
.Accesos-facebook
	margin 1em 0 2em 0 
				
.Boton-verMas
	margin 3em 0 0 0
.Btn-clientes
	margin 7.1em 0 0 0
				
.Contenedor-columnas
	height auto
	margin 0 auto
	margin-bottom 6em
	margin-top 4em
	max-width 1200px
	text-align center
	width 100%
	.Cols
		display inline-block
		height auto
		margin 0 2.5em 0 2.5em
		text-align center
		vertical-align top
		width 25%
		h2
			color #2da862
			font-size 1.3em
			margin 0 0 1em 0
		p
			color grey
			line-height 1.7em
			margin .5em 0 0 0
			
.Contenedor-contenido
	margin 0 auto
	margin-top 2em
	max-width 1200px
	width 100%
	aside
		display inline-block
		height auto
		vertical-align top
		width 25%
	.Contenido
		display inline-block
		height auto
		vertical-align top
		width 70%
		h2
			color titulos
			font-size 1.1em
			margin 0 0 .5em 0
		p
			color gris
			font-size .9em
			text-align  justify
			line-height 2em
		
.Contenedor-influencia
	margin 0 auto
	margin-bottom 3em
	margin-top 5em
	max-width 1300px
	text-align center
	width 100%
	h2
		color gris
		font-style italic
		margin 0 0 2em 0
	.Influencias
		ul li
			color gris
			display inline-block
			list-style none
			margin 0 1.5em 0 1.5em
			img
				height auto
				border-radius 100%
		h3
			font-style italic
			font-size .9em
			
.Contenedor-adiestramiento
	height auto
	margin 0 auto
	margin-top 2em
	max-width 1200px
	width 100%
		
.Columnas-adiestramiento
	color #808080
	font-style italic
	height auto
	line-height 1.8em
	margin 0 auto
	margin-bottom 3em
	margin-top 3em
	max-width 900px
	text-align center
	width 100%
	h2
		margin 0 0 .5em 0
	.Redes-personales
		ul 
			margin-top 1em
			li
				display inline-block
				list-style none
				padding 0 .5em 0 .5em
				vertical-align top

.Descripcion-seccion
	background #d3dbd7
	border-top solid 1px verde
	margin 0 auto
	margin-top 1em
	max-width 1200px
	padding .3em 0 .3em .3em
	width 100%
	p
		color verde
		font-size .8em
		
.Forma
	text-align center
	padding-top 11em
				
.Imagen-principal
	background-image url('../img/centro.jpg')
	background-repeat no-repeat
	bbackground-position center
	background-size cover
	height 550px
	.Logo
		color blanco
		padding 13em 0 0 1em
		h2
			font-style italic
			padding 0 0 -1em .5em

.Preheader
	color blanco
	background rgb(45, 168, 98)
	padding .3em 0 .3em 0
	text-align right
	width 100%
	a
		color blanco
		text-decoration none
	a:hover
		text-decoration underline
	p
		font-size .9em
		margin 0 1em 0 0
	

